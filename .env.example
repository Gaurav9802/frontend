# Frontend Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:5151
# For production:
# REACT_APP_API_URL=https://api.yourdomain.com

# Frontend URL
REACT_APP_FRONTEND_URL=http://localhost:3000
# For production:
# REACT_APP_FRONTEND_URL=https://yourdomain.com

# Environment
REACT_APP_ENV=development
# Options: development, staging, production

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_TRACKING=false

# Analytics (if enabled)
# REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# REACT_APP_MIXPANEL_TOKEN=

# Error Tracking (if enabled)
# REACT_APP_SENTRY_DSN=

# Payment Gateway Public Keys (if applicable)
# REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_...
# REACT_APP_RAZORPAY_KEY_ID=rzp_test_...

# App Configuration
REACT_APP_NAME=Invoice Management System
REACT_APP_VERSION=1.0.0

# File Upload Limits
REACT_APP_MAX_FILE_SIZE=5242880
# 5MB in bytes

# Session Timeout (in minutes)
REACT_APP_SESSION_TIMEOUT=30

# Date Format
REACT_APP_DATE_FORMAT=DD/MM/YYYY

# Currency
REACT_APP_CURRENCY=INR
REACT_APP_CURRENCY_SYMBOL=â‚¹

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_PAGE_SIZE_OPTIONS=5,10,20,50

# Debug Mode (disable in production)
REACT_APP_DEBUG=false
